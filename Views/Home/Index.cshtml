@{
    ViewData["Title"] = "Edin Store - Premium Fashion & Clothing";
}

<header class="masthead">
    <div class="container px-4 px-lg-5 h-100">
        <div class="row gx-4 gx-lg-5 h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-8 align-self-end">
                <h1 class="text-white font-weight-bold">Edin Store</h1>
                <hr class="divider" />
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 mb-5">Premium Quality Clothing & Fashion for Every Style</p>
                <a class="btn btn-primary btn-xl" href="#about">Explore Our Collection</a>
            </div>
        </div>
    </div>
</header>

<section class="page-section bg-dark" id="about">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="text-white mt-0">Discover Your Strength</h2>
                <hr class="divider divider-light" />
                <p class="text-white-75 mb-4">At Edin Store, we are committed to providing our customers with the finest selection of gym equipment and fitness apparel. Our carefully curated collection combines quality, performance, and affordability to meet the diverse needs of our valued fitness enthusiasts.</p>
                <a class="btn btn-light btn-xl" href="#services">Learn More</a>
            </div>
        </div>
    </div>
</section>

<section class="page-section" id="services">
    <div class="container px-4 px-lg-5">
        <h2 class="text-center mt-0">Our Commitment to Your Fitness</h2>
        <hr class="divider" />
        <div class="row gx-4 gx-lg-5">
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-award fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Premium Equipment</h3>
                    <p class="text-muted mb-0">We source only the finest gym equipment and gear from trusted brands worldwide.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-lightning-charge fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Performance Focused</h3>
                    <p class="text-muted mb-0">Our collections feature cutting-edge fitness technology and performance-enhancing gear.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-tag fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Competitive Pricing</h3>
                    <p class="text-muted mb-0">Quality fitness equipment at affordable prices with regular promotions and exclusive offers.</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi-headset fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Expert Support</h3>
                    <p class="text-muted mb-0">Dedicated fitness experts ready to help you choose the right equipment for your goals.</p>
                </div>
            </div>
        </div>
    </div>
</section>

