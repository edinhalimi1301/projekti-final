@model Projekti_Final.Models.Product

@{
    ViewData["Title"] = "Product Details - Edin Store";
}

<section class="py-5">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8">
                
                <div class="mb-5">
                    <h1 class="h2 mb-2">Product Details</h1>
                    <p class="text-muted">View complete product information</p>
                    <hr class="divider" />
                </div>

                
                <div class="card shadow-lg border-0 rounded mb-4">
                    <div class="card-body p-5">
                        
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">Product Name</label>
                            <input class="form-control form-control-lg border-1" value="@Model.Name" readonly />
                        </div>

                        
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">Price</label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">$</span>
                                <input class="form-control border-1" value="@Model.Price.ToString("F2")" readonly />
                            </div>
                        </div>

                        
                        <div class="mb-4">
                            <label class="form-label fw-bold text-dark">Description</label>
                            <textarea class="form-control border-1" rows="5" readonly>@Model.Description</textarea>
                        </div>

                        
                        <div class="d-grid gap-2 d-sm-flex justify-content-sm-end pt-3 border-top">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg px-5">
                                <i class="bi bi-pencil-square me-2"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-lg px-5">
                                <i class="bi bi-trash3 me-2"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>

                
                <div class="mt-4">
                    <a asp-action="Index" class="text-decoration-none text-primary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Product List
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
