@model Projekti_Final.Models.Product

@{
    ViewData["Title"] = "Edit Product - Edin Store";
}

<section class="py-5">
    <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
            <div class="col-lg-8">
                
                <div class="mb-5">
                    <h1 class="h2 mb-2">Edit Product</h1>
                    <p class="text-muted">Update the product details below</p>
                    <hr class="divider" />
                </div>

                
                <div class="card shadow-lg border-0 rounded">
                    <div class="card-body p-5">
                        <form asp-action="Edit" method="post">
                            <input type="hidden" asp-for="Id" />
                            
                            
                            <div class="mb-4">
                                <label asp-for="Name" class="form-label fw-bold text-dark">Product Name</label>
                                <input asp-for="Name" class="form-control form-control-lg border-1" placeholder="Enter product name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            
                            <div class="mb-4">
                                <label asp-for="Price" class="form-label fw-bold text-dark">Price</label>
                                <div class="input-group input-group-lg">
                                    <span class="input-group-text">$</span>
                                    <input asp-for="Price" class="form-control border-1" placeholder="0.00" />
                                </div>
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>

                            
                            <div class="mb-4">
                                <label asp-for="Description" class="form-label fw-bold text-dark">Description</label>
                                <textarea asp-for="Description" class="form-control border-1" rows="5" placeholder="Enter product description..."></textarea>
                                <small class="text-muted d-block mt-2">Provide a detailed description of the product including size, material, and care instructions</small>
                                <span asp-validation-for="Description" class="text-danger small"></span>
                            </div>

                            
                            <div class="d-grid gap-2 d-sm-flex justify-content-sm-end pt-3 border-top">
                                <button type="submit" class="btn btn-primary btn-lg px-5">
                                    <i class="bi bi-pencil-square me-2"></i>Update Product
                                </button>
                                <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5">
                                    <i class="bi bi-x-circle me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>

                
                <div class="mt-4">
                    <a asp-action="Index" class="text-decoration-none text-primary">
                        <i class="bi bi-arrow-left me-2"></i>Back to Product List
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
