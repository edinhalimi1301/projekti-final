@model IEnumerable<Projekti_Final.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<style>
    html, body {
        height: 100%;
    }
    body {
        display: flex;
        flex-direction: column;
    }
    body::before {
        content: '';
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
            background: rgba(0, 0, 0, 0) url('https://images.unsplash.com/photo-1542291026-7eec264c27ff?q=80&w=1170&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: blur(0px);
        z-index: -1;
    }
    .mt-5 {
        flex: 1;
    }
    footer {
        margin-top: auto;
    }
    .product-card {
        background: rgba(255, 255, 255, 0.95);
        border: 1px solid #dee2e6;
        border-radius: 0.5rem;
        box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
        transition: box-shadow 0.15s ease-in-out;
    }
    .product-card:hover {
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }
    .product-title {
        color: #495057;
        font-weight: 600;
    }
    .product-price {
        color: #28a745;
        font-size: 1.25rem;
        font-weight: bold;
    }
    .product-description {
        color: black !important;
        font-weight: 500;
    }
    .btn-custom {
        background-color: #007bff;
        border-color: #007bff;
        color: white;
    }
    .btn-custom:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
    .page-section {
        padding: 5rem 0;
    }
    .divider-custom {
        height: 0.2rem;
        max-width: 3.25rem;
        background-color: #007bff;
        margin: 1.5rem auto;
    }
    #products h1, #products p {
        color: white;
    }
</style>

<section class="page-section" id="products">
    <div class="container px-4 px-lg-5">
        <h1 class="text-center mt-0">Our Products</h1>
        <hr class="divider-custom" />
        <p class="text-center mb-5">Discover our amazing collection of products. Each item is carefully selected for quality and style.</p>
        <div class="text-center mb-4">
            <a asp-action="Create" class="btn btn-custom btn-xl">+ Add New Product</a>
        </div>

        <div class="row gx-4 gx-lg-5">
            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 product-card">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title product-title">@item.Name</h5>
                            <h6 class="card-subtitle mb-2 product-price">@item.Price.ToString("C")</h6>
                            <p class="card-text product-description flex-grow-1">@item.Description</p>
                            <div class="mt-auto">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info me-2">View</a>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning me-2">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<section class="page-section bg-light" id="policies">
    <div class="container px-4 px-lg-5">
        <h2 class="text-center mt-0">Policies & Information</h2>
        <hr class="divider-custom" />
        <div class="row gx-4 gx-lg-5">
            <div class="col-lg-4 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi bi-arrow-clockwise fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Refund Policy</h3>
                    <p class="text-muted mb-0">We offer a 30-day return policy on all items. Items must be in original condition with tags attached.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi bi-truck fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Shipping</h3>
                    <p class="text-muted mb-0">Free shipping on orders over $50. Standard delivery within 5-7 business days.</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 text-center">
                <div class="mt-5">
                    <div class="mb-2"><i class="bi bi-shield-check fs-1 text-primary"></i></div>
                    <h3 class="h4 mb-2">Warranty</h3>
                    <p class="text-muted mb-0">All products come with a 1-year warranty against defects. Contact us for support.</p>
                </div>
            </div>
        </div>
    </div>
</section>
